.form-group
  %label{for: "message"} Message
  %div{"ng-controller" => "MessagesTypeaheadCtrl"}
    %input{message: "message", "ng-model" => "formData.message", type: "text", "typeahead" => "suggestion for suggestion in messages($viewValue)", autocomplete: "off"}

%button.btn{type: "submit"} Submit
= form_for @verse do |f|
  - if @verse.errors.any?
    #error_explanation
      %h2= "#{pluralize(@verse.errors.count, "error")} prohibited this verse from being saved:"
      %ul
        - @verse.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :line_one
    = f.text_field :line_one
  .actions
    = f.submit 'Save'
